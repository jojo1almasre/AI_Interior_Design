@{
    ViewData["Title"] = "Room AI - Interior Design with AI";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="main-container">
        <header class="header">
            <div class="header-content">
                <h1 class="logo">Room AI</h1>
                <p class="tagline">Transform Your Space with AI</p>
            </div>
        </header>

        <section class="hero">
            <div class="hero-content">
                <h2>Choose Your Design Mode</h2>
                <p>Select what you'd like to redesign in your room</p>
            </div>
        </section>

        <section class="mode-selection">
            <div class="modes-grid">
